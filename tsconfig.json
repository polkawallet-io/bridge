{
  "extends": "@open-web3/dev-config/config/tsconfig.json",
  "exclude": ["build/**/*", "**/build/**/*", "scripts/**/*", "docs/**/*"],
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": false,
    "outDir": "build",
    "typeRoots": ["./node_modules/@polkadot/ts", "./node_modules/@types"]
  }
}
